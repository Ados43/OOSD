<?xml version="1.0" encoding="UTF-8"?>
<!-- main-menu.fxml
FXML layout for the main menu. Binds to HelloController for button actions.
Visual design (colors, sizes, spacing) comes from tetris-theme.css.
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Main menu layout -->
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.oosd.teamorange_finalsubmission.HelloController"
            styleClass="screen--main-menu">

    <!-- Header title -->
    <top>
        <Label text="Enhanced Tetris Game"
               styleClass="screen-title"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Main menu buttons -->
    <center>
        <VBox alignment="CENTER" spacing="22" style="-fx-padding: 20;">
            <Button text="Play Tetris" fx:id="playButton" onAction="#onPlayTetris" styleClass="primary-btn"/>
            <Button text="Configuration" fx:id="configurationButton" onAction="#onConfiguration"
                    styleClass="primary-btn"/>
            <Button text="High Scores" fx:id="highScoreButton" onAction="#onShowHighScores" styleClass="primary-btn"/>
            <Button text="Quit" onAction="#onQuit" styleClass="primary-btn"/>
        </VBox>
    </center>

    <!-- Footer credit -->
    <bottom>
        <Label
                text="Authors: Aidan Lietz, Fletcher Carlton and Bernie Miall"
                BorderPane.alignment="CENTER"
                style="-fx-padding: 10;"/>
    </bottom>
</BorderPane>
